' Gambas class file


p As Preset

Public Sub Button1_Click()

  FModule.Show()

End

Public Sub mDir()

  If Not Exist(User.Home & "/.Scoreboard") Then Mkdir User.Home & "/.Scoreboard"
  If Not Exist(User.Home & "/.Scoreboard/CostumPresets") Then Mkdir User.Home & "/.Scoreboard/CostumPresets"

End

Public Sub Form_Open()

  mDir()

End

Public Sub Button2_Click()

  Dialog.Filter = ["*.preset", "Scoarboard Preset"]
  Dialog.Path = User.Home & "/.Scoreboard/CostumPresets/"
  If Dialog.OpenFile() Then Return
  p = Preset.loadPreset(Dialog.Path)

End

Public Sub Button5_Click()

  FimgSetting.Show()

End

